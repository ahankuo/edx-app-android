<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:gravity="center"
    >

    <TextView
        android:id="@+id/watch_on_web_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="90dp"
        android:textColor="@color/grey_3"
        android:layout_margin="20dp"/>

    <TextView
        android:text="@string/assessment_not_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="false"
        android:textColor="@color/grey_medium"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:targetApi="17"
        />

    <TextView
        android:text="@string/assessment_explore_on_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="false"
        android:textColor="@color/grey_medium"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        tools:targetApi="17"
        />

    <Button
        android:id="@+id/view_on_web_button"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:textColor="@color/grey_text"
        android:background="@drawable/rectangle_border_background"
        android:text="@string/assessment_view_on_web"/>

</LinearLayout>

